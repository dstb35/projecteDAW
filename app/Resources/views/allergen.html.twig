{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid mb-5">
        <div class="row">
            <div class="col-lg-12 title">
                <h1>{{ title }}</h1>
            </div>
        </div>

        <div class="row allergens">
            {% for allergen in allergens %}
                <div class="col-12 col-lg-3 text-center py-3 separator bb-qrder">
                    <a href="{{ path('product_byallergen', {'id' : id, 'allergenid' : allergen.allergenid }) }}">
                        <img src="{{ asset('uploads/allergens_images/' ~ allergen.image) }}">
                    </a>
                    <h4 class="label label-qrder">
                        <a href="{{ path('product_byallergen', {'id' : id, 'allergenid' : allergen.allergenid }) }}">{{ allergen.name }}</a>
                    </h4>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}