{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div id="title">
                <h1>{{ title }}</h1>
            </div>
        </div>
        <div class="row">
            {% for allergen in allergens %}
                <div class="col-lg-3 text-center">
                    <a href="{{ path('product_byallergen', {'id' : id, 'allergenid' : allergen.allergenid }) }}">
                        <img class="img-thumbnail"
                             src="{{ asset('uploads/allergens_images/' ~ allergen.image) }}"></img>
                    </a>
                    <h4>
                        <span class="label label-info">{{ allergen.name }}</span>
                    </h4>
                    <hr/>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}