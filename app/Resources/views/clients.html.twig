{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <div id="title">
            <h1>{{ title }}</h1>
        </div>
        <div class="row">
            {% for restaurant in restaurants %}
                <div class="col-lg-3 text-center">
                    {% if restaurant.image is defined %}
                        <img class="restaurants"
                             src="{{ asset('uploads/restaurants_images/' ~ restaurant.image) }}"></img>
                    {% endif %}
                    <h4>
                        <a href="{{ path('clients_edit', {'id': restaurant.restaurantid }) }}">{{ restaurant.name }}</a>
                        {% if restaurant.paid %}
                            <span class="label label-info">Cobrado: Si</span>
                        {% else %}
                            <span class="label label-info">Cobrado: No</span>
                        {% endif %}
                    </h4>
                    <hr/>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}