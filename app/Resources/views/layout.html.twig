<!DOCTYPE HTML>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<title>
			{%  block title %} Restaurantes {% endblock %}
		</title>
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" href="#">Inicio <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('restaurant_index') }}">Restaurantes</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Usuarios
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								{%  if app.user != null %}
									<a class="dropdown-item" href="{{ path("logout") }}">Salir</a>
								{% else %}
									<a class="dropdown-item" href="{{ path("login") }}">Entrar</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item" href="#">Productos</a>
									<a class="dropdown-item" href="#">Empleados</a>
									<a class="dropdown-item" href="#">Pedidos</a>
								{%  endif %}
							</div>
						</li>
						{%  if app.user != null %}
							<li class="nav-link"> Welcome, {{ app.user.name }}</li>
							{%  endif %}
					</ul>
				</div>
			</nav>
		</header>
		<section id="content">
			{% for label, messages in app.flashes %}
				{%  for message in messages %}
					<div class="alert alert-{{ label }}">
						{{  message }}
					</div>
				{%  endfor %}
			{% endfor %}
			{%  block content %} Contenido por defecto {% endblock %}
		</section>
		<footer>
		</footer>
	</body>
</html>