{%  extends "layout.html.twig" %}
{% block content %}
	<div class="container-fluid">
		<h2>{{ title }} {{ product.name }}</h2>
		<img class="img-thumbnail" src="{{ asset('uploads/products_images/' ~ product.image) }}"></img>
		<div class="row">
			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
				{{ form_start(form) }}
				{{  form_end(form) }}
				{% if is_granted('ROLE_USER') and app.user == product.restaurantid %}
					<a class="btn btn-danger" href="{{ path('product_remove', {'id': id, 'productid': product.productid }) }}">Eliminar</a>
				{% endif %}
			</div>
		</div>
	</div>
{%  endblock %}