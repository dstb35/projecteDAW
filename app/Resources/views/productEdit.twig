{% extends "layout.html.twig" %}
{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 title">
				<h1>{{ title }}</h1><h1>{{ product.name }}</h1>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row my-3">
			<div class="col-12 col-md-3 text-center">
				<img class="img-thumbnail" src="{{ asset('uploads/products_images/' ~ product.image) }}" alt="{{ product.name }}">
			</div>
			<div class="col-12 col-md-9">
				<div class="row">
					<div class="col-12">
						{{ form_start(form) }}
						<div class="form-group">
							{{ form_row(form.name) }}
							{{ form_row(form.description) }}
							{{ form_row(form.price) }}
						</div>
						<div class="form-check my-3">
							{{ form_row(form.published) }}
							<label for="appbundle_product_published">Publicado</label>
						</div>
						<div class="form-group">
							{{ form_row(form.category) }}
						</div>
						<div class="custom-file">
							<label for="appbundle_product_image" class="custom-file-label">Imagen</label>
							{{ form_row(form.image) }}
						</div>
						<div class="form-group my-3">
							{{ form_row(form.allergens) }}
						</div>
						<div class="form-group my-3 productEdit">
							{{ form_row(form.Guardar) }}
							{% if is_granted('ROLE_USER') and app.user == product.restaurantid %}
								<a class="btn btn-danger" href="{{ path('product_remove', {'id': id, 'productid': product.productid }) }}">Eliminar</a>
							{% endif %}
						</div>
						{{  form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src=" {{ asset('js/productEdit.js') }}"></script>
{%  endblock %}