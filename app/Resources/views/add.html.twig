{%  extends "layout.html.twig" %}
{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12 title">
				<h1>{{ title }}</h1>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row my-3">
			<div class="col-12 col-md-6 offset-md-3">
				{{ form_start(form) }}
				{% if productAdd is defined %}
					<div class="form-group">
						{{ form_row(form.name) }}
						{{ form_row(form.description) }}
						{{ form_row(form.price) }}
					</div>
					<div class="form-check my-3">
						{{ form_row(form.published) }}
						<label for="appbundle_product_published">Publicado</label>
					</div>
					<div class="form-group">
						{{ form_row(form.category) }}
					</div>
					<div class="custom-file">
						<label for="appbundle_product_image" class="custom-file-label">Imagen</label>
						{{ form_row(form.image) }}
					</div>
					<div class="form-group my-3">
						{{ form_row(form.allergens) }}
					</div>
				{% endif %}
				{% if employeeAdd is defined or tableAdd is defined or categoryAdd is defined %}
					<div class="form-group">
						{{ form_row(form.name) }}
					</div>
				{% endif %}
				{% if allergenAdd is defined %}
					<div class="form-group">
						{{ form_row(form.name) }}
					</div>
					<div class="custom-file mb-3">
						<label for="appbundle_allergen_image" class="custom-file-label">Imagen</label>
						{{ form_row(form.image) }}
					</div>
				{% endif %}
				{{  form_end(form) }}
			</div>
		</div>
	</div>
	<script src="{{ asset('js/productEdit.js') }}"></script>
{%  endblock %}