{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 title">
                <h1>{{ title }}</h1>
            </div>
        </div>
    </div>

    <div class="container my-3">
        <div class="row">
            <div class="col-12 add-products">
                <h4><a href="{{ path('allergen_add') }}">Añadir alérgeno</a></h4>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row allergens">
            {% for allergen in allergens %}
                <div class="col-12 col-lg-3 text-center py-3 separator bs-qrder">
                    <img src="{{ asset('uploads/allergens_images/' ~ allergen.image) }}">
                    <div class="my-3">
                        <a class="btn btn-info"
                           href="{{ path('allergen_edit', {'allergenid' : allergen.allergenid }) }}">Editar</a>
                        <a class="btn btn-danger"
                           href="{{ path('allergen_remove', {'allergenid' : allergen.allergenid }) }}">Eliminar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}