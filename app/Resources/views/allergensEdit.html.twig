{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div id="title">
                <h1>{{ title }}</h1>
            </div>
        </div>
        <h4><a href="{{ path('allergen_add') }}">Añadir alérgeno</a></h4>
        <div class="row">
            {% for allergen in allergens %}
                <div class="col-lg-3 text-center">
                    <div><img class="allergen img-thumbnail" src="{{ asset('uploads/allergens_images/' ~ allergen.image) }}">
                    </div>
                    <h4>
                        <span class="label label-info">{{ allergen.name }}</span>
                    </h4>
                    <div>
                        <a class="btn btn-info"
                           href="{{ path('allergen_edit', {'allergenid' : allergen.allergenid }) }}">Editar</a>
                        <a class="btn btn-danger"
                           href="{{ path('allergen_remove', {'allergenid' : allergen.allergenid }) }}">Eliminar</a>
                    </div>
                    <hr/>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}