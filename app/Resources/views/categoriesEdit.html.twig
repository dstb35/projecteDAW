{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div id="title">
                <h1>{{ title }}</h1>
            </div>
        </div>
        <h4><a href="{{ path('category_add') }}">Añadir categoría</a></h4>
        <div class="row">
            {% for category in categories %}
                <div class="col-lg-3 text-center">
                    <h4>
                        <span class="label label-info">{{ category.name }}</span>
                    </h4>
                    <div>
                        <a class="btn btn-info"
                           href="{{ path('category_edit', {'categoryid' : category.categoryid }) }}">Editar</a>
                        <a class="btn btn-danger"
                           href="{{ path('category_remove', {'categoryid' : category.categoryid }) }}">Eliminar</a>
                    </div>
                    <hr/>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}